<div class="serie">
	<%= image_tag "the-flash.jpg", class: 'img' %>
	<% if is_followed?(serie) %>
		<%= link_to "Deixar de Acompanhar", delete_list_serie_path(serie), class: 'button-like' %>
	<% else %> 
		<%= link_to "Acompanhar Série", add_list_serie_path(serie), class: 'button-like' %>
	<% end %>
	<h3><%= serie.title %></h3>
	<p>Proximo episódio: segunda</p>
</div>